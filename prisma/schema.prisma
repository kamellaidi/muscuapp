generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
model Machine {
  id          Int       @id @default(autoincrement())
  nom         String
  description String
  groupe      String
  categorie   String
  workouts    Workout[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Workout {
  id          Int      @id @default(autoincrement())
  date        String
  machineId   Int
  machine     Machine  @relation(fields: [machineId], references: [id])
  repetitions Int
  poids       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}